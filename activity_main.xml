<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CAFB7"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/height_and_weight"
        android:layout_width="375dp"
        android:layout_height="117dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="71dp"
            android:translationX="35dp"
            android:translationY="25dp"
            app:srcCompat="@drawable/weight_scale_505x512" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:fontFamily="@font/adamina"
            android:text="BMI"
            android:textSize="30sp"
            android:translationX="160dp"
            android:translationY="35dp"
            android:typeface="sans" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/steps"
        android:layout_width="375dp"
        android:layout_height="117dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_and_weight">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="52dp"
            android:layout_height="72dp"
            android:translationX="35dp"
            android:translationY="25dp"
            app:srcCompat="@drawable/person_walking_transportation_769x1024" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:fontFamily="@font/adamina"
            android:text="Steps"
            android:textSize="30sp"
            android:translationX="160dp"
            android:translationY="35dp"
            android:typeface="sans" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/heart_rate"
        android:layout_width="375dp"
        android:layout_height="117dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/steps">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="61dp"
            android:layout_height="70dp"
            android:translationX="35dp"
            android:translationY="25dp"
            app:srcCompat="@drawable/heart_512x456" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="Heart rate"
            android:textSize="30sp"
            android:translationX="160dp"
            android:translationY="35dp"
            android:typeface="sans" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="299dp"
        android:layout_height="49dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="57dp"
        android:fontFamily="@font/adamina"
        android:text="Personal Health App"
        android:textColor="#3D4868"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/water"
        android:layout_width="375dp"
        android:layout_height="117dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heart_rate">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="70dp"
            android:layout_height="71dp"
            android:translationX="30dp"
            android:translationY="18dp"
            app:srcCompat="@drawable/drop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="Water intake"
            android:textSize="30sp"
            android:translationX="160dp"
            android:translationY="35dp"
            android:typeface="sans" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/workout"
        android:layout_width="375dp"
        android:layout_height="117dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="69dp"
            android:layout_height="74dp"
            android:translationX="30dp"
            android:translationY="15dp"
            app:srcCompat="@drawable/timer" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="Workout"
            android:textSize="30dp"
            android:translationX="160dp"
            android:translationY="35dp"
            android:typeface="sans" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout><?xml version="1.0" encoding="utf-8"?>
